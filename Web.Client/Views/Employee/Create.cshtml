@model Web.Client.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
}

<h1>Employees</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Home" asp-action="GetEmployees">
    <p>
        Employee: <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<form asp-controller="Employee" asp-action="CreateEmployee" method="post">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewData["Employee"]</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="Position" class="form-control" placeholder="Position" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" class="btn btn-primary" value="CreateEmployee" />
            <a asp-action="Employees">Cancel</a>
        </div>
    </div>
</form>