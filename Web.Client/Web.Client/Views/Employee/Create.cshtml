@model Web.Client.Models.Employee

<h1>Create Employee</h1>

<form asp-controller="Employee" asp-action="CreateEmployee" method="post">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewData["Employee"]</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="Position" class="form-control" placeholder="Position" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileImage" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" class="btn btn-primary" value="CreateEmployee" />
            <a asp-action="Employees">Cancel</a>
        </div>
    </div>
</form>